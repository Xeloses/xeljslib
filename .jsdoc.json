{
  "recurseDepth": 10,
  "sourceType": "module",
  "source": {
    "include": [ "./package.json", "./src" ],
    "includePattern": "\\.(m|c)?jsx?$",
    "excludePattern": "(node_modules|vendor|utility)"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [ "jsdoc", "closure" ]
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false
    }
  },
  "opts": {
    "access": [ "public", "undefined" ],
    "destination": "./docs/",
    "encoding": "utf8",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown",
    "plugins/summarize"
  ],
  "markdown": {
    "tags": [ "name" ],
    "hardwrap": true
  }
}
